{
    "name": "devuri/wp-kdx-canvas",
    "type": "wordpress-theme",
    "license": "GPL-2.0-only",
    "description": "Kadence Child Theme",
    "authors": [
        {
            "name": "Uriel Wilson",
            "email": "support@urielwilson.com",
            "homepage": "https://urielwilson.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.3 || ^7.4 || ^8.0 || ^8.1",
        "ext-curl": "*",
        "ext-json": "*",
        "devuri/plugin-interface": "^0.2.0"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.42",
        "fakerphp/faker": "^1.23",
        "phpstan/phpstan": "^1.10",
        "symfony/var-dumper": "^5.4",
        "szepeviktor/phpstan-wordpress": "^1.3",
        "wptrt/wpthemereview": "^0.2.1",
        "yoast/phpunit-polyfills": "^4.0"
    },
    "autoload": {
        "files": [
            "src/inc/helpers.php"
        ],
        "psr-4": {
            "Kdx\\": "src"
        }
    },
    "autoload-dev": {
        "files": [
            "src/inc/helpers.php"
        ],
        "psr-4": {
            "Kdx\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "build": [
            "composer phpstan",
            "composer codefix",
            "composer test",
            "composer install --no-dev"
        ],
        "codefix": [
            "composer php-cs-fixer",
            "composer install --no-dev"
        ],
        "php-cs-fixer": [
            "composer require --dev friendsofphp/php-cs-fixer 3.23.0",
            "vendor/bin/php-cs-fixer fix -vvv",
            "composer remove --dev friendsofphp/php-cs-fixer",
            "composer install --no-dev"
        ],
        "phpstan": [
            "composer install",
            "@php ./vendor/bin/phpstan analyse"
        ],
        "test": [
            "composer install -q",
            "vendor/bin/phpunit",
            "composer install --no-dev"
        ],
        "test-covers": [
            "@putenv XDEBUG_MODE=coverage",
            "composer install -q",
            "vendor/bin/phpunit --coverage-html coverage-report"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true
        },
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
